<div class="row-fluid">
<div class="span12">
<div class="page-header position-relative">
<h1><%= "#{@category.title} kategorisindeki " if @category %>Haberler</h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Başlık</th>
      <th>Yayın tarihi</th>
      <th>Kategori</th>
      <th>Etiketler</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= l article.publish_date, :format=>:standart %></td>
        <td>
        <% unless article.category.blank? %>
        <%= content_tag('span', article.category.title, :class=>"label label-info arrowed-right arrowed-in")  %>
        <% end %>
        </td>
        <td><%= article.tag_list.map { |x| link_to x, admin_tag_path(x), :class=>"label label-success arrowed-in arrowed-in-right"}.join(', ').html_safe %></td>
        <td><%= link_to 'Detay', admin_article_path(article), class: "btn btn-primary btn-mini" %></td>
        <td><%= link_to 'Düzenle', edit_admin_article_path(article), class: "btn btn-info btn-mini" %></td>
        <td><%= link_to 'Sil', admin_article_path(article), class: "btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <%= will_paginate @articles, :renderer=>"BootstrapLinkRenderer" %>

<br>

<%= link_to 'Yeni Haber', new_admin_article_path, class: "btn btn-success" %>
</div>
</div>