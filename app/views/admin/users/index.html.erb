<div class="page-header position-relative">
<h1>Kullanıcılar</h1>
</div>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Adı soyadı</th>
      <th>E-posta</th>
      <th>Kayıt tarihi</th>
      <th>Yetkisi</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, [:admin, user] %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td>
        <%= link_to "Change User", edit_admin_user_path(user) %>
        <a id="modal-wizard" data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
        <%= render user %>
      </td>
      <td><%= link_to("Delete user", admin_user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
